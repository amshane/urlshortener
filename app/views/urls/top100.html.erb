<div class="container" style="padding-top: 100px;">
  <div class="text-center">
    <h2 style="font-family: 'Gochi Hand', cursive; font-size: 55px; color: #A300CC;">TOP 100 LINKS</h2>
  </div>

  <div class='row'>
    <div class="col-md-10 col-md-offset-1 table-responsive">
      <table class="table table-hover">
        <thead>
          <tr class="text-center" style="font-family: 'Gochi Hand', cursive; color: #A300CC; font-size: 18px;">
            <th>ORIGINAL URL</th>
            <th>SHORTENED URL</th>
            <th>NUMBER OF VISITS</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @urls.each do |url| %>
            <tr>
              <td><%= link_to "#{url.original_url.length < 40 ? url.original_url : url.original_url[0..40]}...", url.original_url, target: 'blank' %></td>
              <td class="text-center"><%= link_to "#{url.show_custom_url}", url_path(url.id), method: 'patch', target: 'blank' %></td>
              <td class="text-center"><%= url.times_visited %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

